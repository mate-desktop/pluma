import os
import subprocess
import sys

EXTENSIONS = {
    '.cc':  '.hh',
    '.c':   '.h',
    '.C':   '.H',
    '.c++': '.h++',
    '.cp':  '.hp',
    '.cpp': '.hpp',
    '.CPP': '.HPP',
    '.cxx': '.hxx',
    '.h':   '.c',
    '.H':   '.C',
    '.h++': '.c++',
    '.hh':  '.cc',
    '.hp':  '.cp',
    '.hpp': '.cpp',
    '.HPP': '.CPP',
    '.hxx': '.cxx'
}

try:
    path = os.environ["PLUMA_CURRENT_DOCUMENT_PATH"]
except KeyError:
    sys.exit()

root, ext = os.path.splitext(path)
new_ext = EXTENSIONS.get(ext)
if new_ext is not None:
    subprocess.run(['/usr/bin/pluma', root + new_ext])
